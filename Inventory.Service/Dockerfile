FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

COPY . .

# восстанавливаем зависимости
RUN dotnet restore Inventory.Service/Inventory.Service.csproj

# публикуем сервис
RUN dotnet publish Inventory.Service/Inventory.Service.csproj \
    -c Release \
    -o /app/publish


FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS runtime

# Устанавливаем Kerberos libs для Npgsql
RUN apt-get update \
    && apt-get install -y --no-install-recommends libkrb5-3 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "Inventory.Service.dll"]